root = true
[*]
end_of_line=crlf
insert_final_newline = true

# Analyzers
dotnet_diagnostic.S4487.severity = warning
dotnet_diagnostic.S3376.severity = none
dotnet_diagnostic.S101.severity=silent

# Code files
[*.{cs,cshtml,ts}]
indent_style = space
indent_size = 4

# Project files
[*.{csproj,props}]
indent_style = space
indent_size = 2
